{
  "name": "dpdhl-design-system",
  "version": "1.0.2",
  "private": true,
  "scripts": {
    "build": "yarn lib:build",
    "dev": "concurrently \"yarn sb\" \"yarn lib:build:watch\" ",
    "start": "sirv public --no-clear",
    "sb": "start-storybook -p 6006 --quiet --ci -s ./uilib/src/assets",
    "build:sb": " yarn lib:build && yarn lib:link && build-storybook --quiet --static-dir ./uilib/src/assets --output-dir public-sb ",
    "link": "yarn lib:link",
    "lib:build": "yarn --cwd ./uilib install && yarn --cwd ./uilib build",
    "lib:link": "cd ./uilib && yarn link && cd .. && yarn link @sprinteins/dpdhl-uilib",
    "lib:build:watch": "yarn --cwd ./uilib build:watch",
    "lib:test": "yarn --cwd ./uilib test",
    "postinstall": "yarn lib:link"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-url": "^6.0.0",
    "@storybook/addon-actions": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.4",
    "@storybook/addon-links": "^6.3.4",
    "@storybook/addon-svelte-csf": "^1.1.0",
    "@storybook/svelte": "^6.3.4",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.0.2",
    "eslint": "^7.26.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "postcss": "^8.2.15",
    "postcss-font-base64": "^1.0.5",
    "postcss-load-config": "^3.0.1",
    "react-is": "^17.0.2",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.38.1",
    "svelte-loader": "^3.1.1",
    "svelte-preprocess": "^4.7.3",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  }
}
